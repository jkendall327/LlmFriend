{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppConfiguration": {
    "AllowedFilePathsForSearch": [
      "~/Downloads"
    ],
    "CrontabForScheduledInvocation": "0 0 * * *",
    "ProbabilityOfStartingConversationsAutonomously": 0.75,
    "TimeForExpectedReplyInConversation": "00:00:10",
    "AutonomousFeaturesEnabled": true,
    "PersonalityProfilePath": "PERSONALITY.md",
    "MemoryBankFolder": "path/to/memoryBank",
    "EnableToolUse": false
  },
  "AiModel": {
    "ModelName": "deepseek-reasoner",
    "SupportsToolUse": true,
    "ApiRootUrl": "https://api.deepseek.com"
  }
}
